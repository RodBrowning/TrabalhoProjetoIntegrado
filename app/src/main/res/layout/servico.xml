<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:id="@+id/relative_layout_servico_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_duracao_servico"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/text_view_servico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corte Masculino"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_toStartOf="@+id/text_view_duracao_servico"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/text_view_valor"
            android:layout_below="@+id/text_view_servico"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$25,00"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>